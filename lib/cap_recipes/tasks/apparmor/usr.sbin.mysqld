# For more details, please see /etc/apparmor.d/local/README.
# Adding /mnt/mysql to allowed mysql directories
#include <tunables/global>

/usr/sbin/mysqld {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/user-tmp>
  #include <abstractions/mysql>
  #include <abstractions/winbind>

  capability dac_override,
  capability sys_resource,
  capability setgid,
  capability setuid,

  network tcp,

  /etc/hosts.allow r,
  /etc/hosts.deny r,

  /etc/mysql/*.pem r,
  /etc/mysql/conf.d/ r,
  /etc/mysql/conf.d/* r,
  /etc/mysql/my.cnf r,
  /usr/sbin/mysqld mr,
  /usr/share/mysql/** r,
  /var/log/mysql.log rw,
  /var/log/mysql.err rw,
  /var/lib/mysql/ r,
  /var/lib/mysql/** rwk,
  /mnt/mysql/ r,
  /mnt/mysql/** rwk,
  /opt/mysql/ r,
  /opt/mysql/** rwk,
  /mydata/ r,
  /mydata/** rwk,
  /mylogs/ r,
  /mylogs/** rwk,
  /var/log/mysql/ r,
  /var/log/mysql/* rw,
  /var/run/mysqld/mysqld.pid w,
  /var/run/mysqld/mysqld.sock w,
  /sys/devices/system/cpu/ r,
  /backup/mysql_backup/last/ r,
  /backup/mysql_backup/last/** rwk,
  /backup/mysql_backup/current/ r,
  /backup/mysql_backup/current/** rwk,
}
